<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:layout_centerInParent="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择类型"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/choose_image_camera"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_camera"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="拍摄"
            android:textColor="@color/black"
            android:layout_below="@id/choose_image_camera"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@id/choose_image_camera"
            android:layout_alignStart="@id/choose_image_camera"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/choose_image_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_photo"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"/>


        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="相册"
            android:textColor="@color/black"
            android:layout_below="@id/choose_image_photo"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@id/choose_image_photo"
            android:layout_alignStart="@id/choose_image_photo" />

    </RelativeLayout>

    <Button
        android:id="@+id/choose_image_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="@color/transparent"/>

</LinearLayout>