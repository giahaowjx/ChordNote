package test;
import java.util.ArrayList;

public class Problems {

	//根据对应章节号访问数据库
	
	int ID;//某一章节的某一小节内，第几题
	//需要写入数据库的内容
	boolean completed;//是否完成
	boolean collected;//是否收藏
	
	boolean correctOrNot;//是否做对
	String notes;//做了什么笔记
	
	
	//需要从数据库中读出的内容
	char correctAnswer;//正确答案是什么
	String problem;//题目的字面描述
					//可附加音频和图片
	ArrayList<String> options;//选项的字面描述
								//也可附加音频和图片
	
	
	public Problems(int id,boolean comple,boolean colle) {
		ID=id;
		completed=comple;
		collected=colle;
		//待完善,setAttributesFromDB()
		correctAnswer=getAnswerFromDB();
		problem=getProFromDB();
		options=getOptionsFromDB();
	}
	
	public void addNotes(String sth)
	{
		notes=sth;
	}
	public void checkAnswer(char inputAnswer)
	{
		if(inputAnswer == correctAnswer) correctOrNot=true;
		else correctOrNot=false;
	}
	
	public void printProblem()
	{
		System.out.print(ID+"."+problem);
	}
	public void printOptions()
	{
		for(int i=0;i<options.size();i++)
		{
			System.out.println(options.get(i));
		}
	}
	
	//调出这道题目
	//没想好
	//离开这道题目，修改数据库
	public void updateDB()
	{
		//待完善
		setDBcollectOrNOt(collected);
		setDBcorrectOrNot(correctOrNot);
		setDBcompleteOrNot(completed);
		setNotes(notes);
	}
	
	

}
