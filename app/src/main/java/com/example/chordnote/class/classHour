package test;
import java.util.ArrayList;
public class ClassHour {

    int id;//需要根据id访问对应的课程
	//Title
	String classChapter;
	String classSection;
	String className;
	
	//文字简介
	String classIntroduction;
	
	//题目,与problem有联系
	ArrayList<Problems> thisSectionProblems;
	
	
	//构造函数
	public ClassHour(int ID)
	{
	    id=ID;
		classChapter=getclassChapterFromDB();
		classSection=getclassSectionFromDB();
		className=getclassNameFromDB();
		classIntroduction=getInfoFromDB();
	}
	

	
	public  List<Problems>getProblems()
	{
        List problemsIDs=getproblemIDsfromDB();
        List<Problems>problems=new ArrayList<>();
        for(int id:problemsIDs)//根据练习id得到对应的练习
        {
            Problem problem=new Problem(id);
            problems.add(problem);
        }
	}
	

	
	
}
